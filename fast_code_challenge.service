[Unit]
Description=Sejourney Analytics service
StartLimitIntervalSec=0

[Service]
User=deploy
WorkingDirectory=/home/deploy/sejourney-analytics
ExecStart=/home/deploy/sejourney-analytics/venv/bin/uvicorn app.main:app --host=0.0.0.0 --port 8000 --no-server-header
Restart=on-failure
RestartSec=3
KillSignal=SIGQUIT

[Install]
WantedBy=multi-user.target